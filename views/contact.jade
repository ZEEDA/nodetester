extends layout

block content
  .container
    .row
      .col-md-6.offset-md-3
        h1 Contact
        form(method='POST', action='contact/send')
          .form-group
            label(for='name') Name
            input.form-control(type='text', id='name', name='name', placeholder='Enter Name')
          .form-group
            label(for='email') Email
            input.form-control(type='email', id='email', name='email', placeholder='Enter Email')
          .form-group
            label(for='message') Message
            textarea.form-control(name='message', id='message', placeholder='Enter Message...')
          button.btn.btn-secondary(type='submit') Submit
